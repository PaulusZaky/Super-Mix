{{ 'section-footer-custom.css' | asset_url | stylesheet_tag }}

{% assign footer_item_width = '' %}
{% case section.blocks.size %}
  {% when 1 %}
    {% assign footer_item_width = 'col-md-12 col-sm-12' %}
  {% when 2 %}
    {% assign footer_item_width = 'col-md-6 col-sm-12' %}
  {% when 3 %}
    {% assign footer_item_width = 'col-md-4 col-sm-12' %}
  {% when 4 %}
    {% assign footer_item_width = 'col-md-3 col-sm-12' %}
{% endcase %}

<footer data-wetheme-section-type="footer" data-wetheme-section-id="{{ section.id }}" class='custom-footer'>
  <div class="f-logo-container">
    <a href="{{ routes.route_url }}">
      <img
        src="https://cdn.shopify.com/s/files/1/0563/2737/2823/files/supermix-logo.png?v=1647034023"
        class="f-logo-image"
        style="width:185px"
      >
    </a>
    {% if section.settings.blog != blank %}
      <a href="{{section.settings.blog}}" class="blog-button link">Blog</a>
    {% endif %}
  </div>
  <div class="bottom-footer-flex">
    <div class="reserve-container text-body">© 2024 Relume. All rights reserved.</div>
    <div class="sublink-container text-body">
      {% for link in linklists['bottom-bar'].links %}
        <a href="{{link.url}}" class="link">{{ link.title }}</a>
      {% endfor %}
    </div>
  </div>
</footer>

<script>
  var acc = document.getElementsByClassName('accordion');
  var i;
  const isKiosk = localStorage.getItem('scaaf_aid') !== null;

  for (i = 0; i < acc.length; i++) {
    acc[i].addEventListener('click', function () {
      this.classList.toggle('active');
      var panel = this.nextElementSibling;
      if (panel.style.maxHeight) {
        panel.style.maxHeight = null;
        panel.style.padding = '0px 0px 0px 0px';
      } else {
        panel.style.maxHeight = panel.scrollHeight + 'px';
        panel.style.padding = '15px 0px 150px 0px';
      }
    });
  }
</script>

